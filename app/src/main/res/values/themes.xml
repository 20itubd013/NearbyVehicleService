<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NearbyVehicleService" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/color_primary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.NearbyVehicleService.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="Theme.NearbyVehicleService.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="hintEnabled">false</item>
        <item name="errorEnabled">false</item>
        <item name="counterEnabled">false</item>
        <item name="helperTextEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="boxBackgroundColor">@color/edt_bg_color</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeErrorColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">#FF0033</item>
    </style>



    <style name="Button">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.primary">
        <item name="android:background">@drawable/round_bg</item>
        <item name="android:color">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textview">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview16">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#1B1B1B</item>
    </style>

    <style name="etroundboder">
        <item name="android:background">@drawable/round_border</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.NearbyVehicleService.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ShapeableImageView">
        <item name="cornerSize">50%</item>
    </style>

</resources>